<%
  dom = item.to_dom(:suffix => "#{attribute}_preview" )
%>

<% if has_file_preview %>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function() { 
    $("#<%= dom %>").fancybox(); 
  });
</script>
<% end %>

<a id="<%= dom %>" href="<%= href %>" title="<%= item.to_label %>"><%= content %></a>
