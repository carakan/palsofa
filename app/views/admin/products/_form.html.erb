<% form_for @item, :url  => options, :html => { :multipart => true } do |form| %>
  <fieldset class="inputs">
    <ol>
      <%= build_form(@fields, form) %>
      <li>
        <label>
          Categoria
        </label>
        <%= form.select(:category_list, "SOFÁS 3+2,SOFÁS,CAMA,CHAISELONGUE,RELAX,RINCONERAS,BUTACAS,DESCANSO,OUTLET".split(','), :multiple => true, :style => 'height: 100px;') %>
      </li>
    </ol>
  </fieldset>
  <fieldset class="buttons">
    <ol style="height: ">
      <li><%= submit_tag button , :class => 'commit' %></li>
    </ol>
  </fieldset>
<% end %>