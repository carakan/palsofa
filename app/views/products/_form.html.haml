- form_for @product do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :price
    %br
    = f.text_field :price
  %p
    = f.label :other
    %br
    = f.text_area :other
  %p
    = f.submit "Submit"
