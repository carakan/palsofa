#content
  .subheader
    .left
      %h3 BUSCA POR CATEGORÍA
      %ul
        - @categories.each do |category|
          %li= link_to(category.name, {:id => category.name, :action => 'show'}, :title => category.name)
    .right
      %img{:alt => "palsofa", :src => "/images/img1.jpg"}
    %br.clear
  #bodyProducts
    .products
      %h3.title OPORTUNIDADES
      %ul
        - Product.tagged_with("oportunity_#{params[:id]}").each do |product|
          = render :partial => 'show', :locals => {:sofa => product}
    .products
      %h3.title NOVEDADES
      %ul
        - Product.tagged_with("novedad_#{params[:id]}").each do |product|
          = render(:partial => 'show', :locals => {:sofa => product})    .products
      %h3.title LOS MÁS VENDIDOS
      %ul
        - Product.tagged_with("best_#{params[:id]}").each do |product|
          = render(:partial => 'show', :locals => {:sofa => product})